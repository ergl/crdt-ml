Test "test_immutable"
    TestTools: qtest
    WorkingDirectory: test
    Command:
        qtest -o im_test.ml extract ../src/immutable/*.ml &&
        ocamlbuild -cflags -warn-error,+26 \
            -use-ocamlfind -package 'qcheck, oUnit, crdt_immutable' \
